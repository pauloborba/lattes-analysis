<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"> 
<hibernate-configuration> 
	<session-factory> 
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property> 
		<property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/paTest</property> 
		<property name="hibernate.connection.password">root</property> 
		<property name="hibernate.connection.username">postgres</property> 
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property> 
		<property name="hibernate.show_sql">true</property> 
		<property name="hibernate.format_sql">false</property> 
		<property name="hibernate.characterEncoding">UTF-8</property> 
		<property name="hbm2ddl.auto">create-drop</property>
		
		<property name="hibernate.current_session_context_class">thread</property>
		<mapping class="com.pa.entity.Group" />  
		<mapping class="com.pa.entity.Publication" />  
		<mapping class="com.pa.entity.Curriculo" /> 
		<mapping class="com.pa.entity.Orientation" /> 
		<mapping class="com.pa.entity.PublicationType" /> 
		<mapping class="com.pa.entity.Qualis" /> 
		<mapping class="com.pa.entity.QualisData" /> 
		<mapping class="com.pa.entity.TechinicalProduction" /> 
		<mapping class="com.pa.entity.Author" />
	</session-factory> 
</hibernate-configuration>

